rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }
    
    // Validate file size (max 25MB for documents)
    function isValidSize() {
      return request.resource.size < 25 * 1024 * 1024;
    }
    
    // Validate file types
    function isValidDocumentType() {
      return request.resource.contentType.matches('application/pdf')
          || request.resource.contentType.matches('application/msword')
          || request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.*')
          || request.resource.contentType.matches('text/plain')
          || request.resource.contentType.matches('image/.*');
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/jpeg')
          || request.resource.contentType.matches('image/png')
          || request.resource.contentType.matches('image/gif')
          || request.resource.contentType.matches('image/webp');
    }
    
    // ============================================
    // USER PROFILE IMAGES
    // ============================================
    match /users/{userId}/profile/{fileName} {
      // User can read their own profile image
      allow read: if isAuthenticated();
      
      // User can upload their own profile image
      allow write: if isOwner(userId) 
        && isValidImageType()
        && request.resource.size < 5 * 1024 * 1024; // 5MB max for profile pics
    }
    
    // ============================================
    // CASE DOCUMENTS
    // ============================================
    match /cases/{caseId}/{allPaths=**} {
      // Authenticated users with case access can read
      // Note: Full access control should be done via Cloud Functions
      allow read: if isAuthenticated();
      
      // Authenticated users can upload documents
      allow write: if isAuthenticated() 
        && isValidDocumentType()
        && isValidSize();
      
      // Only admins can delete
      allow delete: if isAdmin();
    }
    
    // ============================================
    // GENERAL DOCUMENTS
    // ============================================
    match /documents/{userId}/{allPaths=**} {
      // Owner can read their documents
      allow read: if isOwner(userId) || isAdmin();
      
      // Owner can upload
      allow write: if isOwner(userId) 
        && isValidDocumentType()
        && isValidSize();
      
      // Owner or admin can delete
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // ============================================
    // VOUCHER ATTACHMENTS
    // ============================================
    match /vouchers/{userId}/{voucherId}/{fileName} {
      allow read: if isOwner(userId) || isAdmin();
      
      allow write: if isOwner(userId) 
        && isValidDocumentType()
        && isValidSize();
    }
    
    // ============================================
    // MESSAGE ATTACHMENTS
    // ============================================
    match /messages/{messageId}/{fileName} {
      // Authenticated users can read (additional checks in Firestore)
      allow read: if isAuthenticated();
      
      // Authenticated users can upload
      allow write: if isAuthenticated() 
        && isValidDocumentType()
        && isValidSize();
      
      // Cannot delete message attachments (audit trail)
      allow delete: if false;
    }
    
    // ============================================
    // TEMPORARY UPLOADS (for processing)
    // ============================================
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
      
      // Auto-delete via lifecycle rules recommended
    }
    
    // ============================================
    // DENY ALL OTHER ACCESS
    // ============================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
